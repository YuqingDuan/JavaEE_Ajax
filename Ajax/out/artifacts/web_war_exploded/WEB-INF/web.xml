<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>localscope_refresh.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>GetDemoServlet</servlet-name>
        <servlet-class>servlet.GetDemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckNameServlet</servlet-name>
        <servlet-class>servlet.CheckNameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetDemoServlet</servlet-name>
        <url-pattern>/GetDemoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckNameServlet</servlet-name>
        <url-pattern>/CheckNameServlet</url-pattern>
    </servlet-mapping>
</web-app>
